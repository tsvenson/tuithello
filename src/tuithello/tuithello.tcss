Square {
    width: 2;
    height: 1;
    border: none;
    background: darkgreen;
}

#board {
    align: center middle;
}

Board > Grid {
    keyline: thin lightgrey;
    background: darkgreen;
    grid-size: 8 8;
    grid-columns: 2;
    grid-rows: 1;
    grid-gutter: 1;
    width: auto;
    height: auto;
}

Board {
    border: tall darkgrey;
    background: darkgreen;
    width: auto;
    height: auto;
    padding: 0 2;
}